{
  "compilerOptions": {
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "target": "es5",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./lib",
    "sourceMap": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationDir": "./lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
